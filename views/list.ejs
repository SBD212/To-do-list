
<%-include ('header') -%> 

    <div class="box" id="title"><h1><%= Title %></h1></div>


    <div class="box">
      <% for( let index = 0; index < newListItems.length; index++ ) { %>
      <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name = "checkbox" value="<%= newListItems[index].name %>" onchange="this.form.submit()"/>
        <p name = 'itemName'> <%= newListItems[index].name %></p>
      </div>
      <input type="hidden" name="listName" value="<%= Title %>">
    </form>
      <% } %>

      
    <form  class ='item' action="/" method="post">
        <input type="text" name="addTodo" id="" placeholder= "<%- text %>"  autocomplete="off" required/>
        <button type="submit" name="list" value= <%= Title %> > + </button>
    </form>
      
    </div>

<%-include ('footer') -%> 

